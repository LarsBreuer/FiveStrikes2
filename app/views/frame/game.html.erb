<table class = "game_headline_table"  style = "width: 100%;border: 3px solid white;" cellspacing=0 cellpadding=0 border=0>

  <tr class = "game_headline_row_date">

    <td colspan="5" class = "game_headline_date" >

      <%= @game.convert_game_date(@game.game_date) %>

    </td>

  </tr>

  <tr class = "game_headline_row">

    <td class = "game_headline_left">
      <%= @game.get_club_name_by_team_id(@game.team_home_id) %>
    </td>
    <td class = "game_headline_middle_left">
      <%= @game.count_team_goals(@game.team_home_id) %>
    </td>
    <td class = "game_headline_middle">
      -
    </td>
    <td class = "game_headline_middle_right">
      <%= @game.count_team_goals(@game.team_away_id) %>
    </td>
    <td class = "game_headline_right">
      <%= @game.get_club_name_by_team_id(@game.team_away_id) %>
    </td>

  </tr>

</table>

<table class = "game_ticker_table" style = "width: 100%;" cellspacing=0 cellpadding=0 border=0>

  <% @ticker_events.each do |ticker_event| %>

    <tr class = "game_ticker_row">

      <% if ticker_event.home_or_away == 0 %>

        <td class = "game_ticker_left" style = "background: #ffcdcc;" >

      <% else %>

        <td class = "game_ticker_left" style = "background: #e1f2ff;" >

      <% end %>

        <%= ticker_event.convert_seconds_to_time(ticker_event.time / 1000) %>

        <% if ticker_event.activity_id == 10170 %>

          <p><%= image_tag("ticker_symbol_defense.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10300 %>
          
          <p><%= image_tag("ticker_symbol_tech_fault.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10400 %>

          <p><%= image_tag("ticker_symbol_yellow_card.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10401 %>

          <p><%= image_tag("ticker_symbol_two_out.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10403 %>

          <p><%= image_tag("ticker_symbol_red_card.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10600 %>

          <p><%= image_tag("ticker_symbol_timeout.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10501 %>

          <p><%= image_tag("ticker_symbol_sub_in.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10700 %>

          <p><%= image_tag("ticker_symbol_tactic.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10150 %>

          <p><%= image_tag("ticker_symbol_miss.png") %></p>

        <% end %>

        <% if ticker_event.activity_id == 10100 %>

          <p><%= ticker_event.ticker_result %></p>

        <% end %>

      </td>

      <% if ticker_event.home_or_away == 0 %>

        <td class = "game_ticker_right" style = "background: #ffcdcc;" >

      <% else %>

        <td class = "game_ticker_right" style = "background: #e1f2ff;" >

      <% end %>
      
        <%= ticker_event.ticker_event_note %>

      </td>

    </tr>

  <% end %>

</table>