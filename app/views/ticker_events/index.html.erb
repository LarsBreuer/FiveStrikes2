<% @ticker_events.each do |ticker_event| %>
  <tr>
    <td><%= ticker_event.game_id %></td>
    <td><%= ticker_event.time %></td>
    <td><%= ticker_event.ticker_event_note %></td>
    <td><%= ticker_event.activity_id %></td>
    <td><%= ticker_event.home_or_away %></td>
    <td><%= link_to 'Show', ticker_event %></td>
    <td><%= link_to 'Edit', edit_ticker_event_path(ticker_event) %></td>
    <td><%= link_to 'Destroy', ticker_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

