  <% i = 0 %>
  <% array_length = @game_lead.count %>

  <% while( i < array_length )  %>

    <tr class = "game_stat_row">

      <td class = "game_stat_left"><%= @game_lead[i+1] %></td>
      <td colspan="2" class = "game_stat_center_middle">
        <%= @game_lead[i] %>
      </td>
      <td class = "game_stat_right"><%= @game_lead[i+2] %></td>

    </tr>

    <tr class = "game_stat_row">

      <td colspan="2" class = "game_stat_chart_left">
        <IMG src="/assets/grey.png" width="<%= @game_lead[i+3] -%>" height=10 border=0><IMG src="/assets/blue.png" width="<%= @game_lead[i+4] -%>" height=10 border=0>
      </td>
      <td colspan="2" class = "game_stat_chart_right">
        <IMG src="/assets/red.png" width="<%= @game_lead[i+5] -%>" height=10 border=0><IMG src="/assets/grey.png" width="<%= @game_lead[i+6] -%>"  height=10 border=0>
      </td>

    </tr>

    <% i += 7 %>

  <% end %>

