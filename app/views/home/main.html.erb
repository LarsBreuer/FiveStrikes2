<div id="main_nav" >
  <% if @game %>
		<table div id="game_item_table">
  		<tr>
    		<th><%= @game.home_team.team_name %></th>
    		<th> - </th>
    		<th><%= @game.away_team.team_name %></th>
  		</tr>
  		<tr align="right">
				<td><%= link_to 'Übersicht', home_statistic_home_path(:game_id=>@game.id), :remote => true %></td>&nbsp;&nbsp;&nbsp;
        <td><%= link_to 'Statistik', home_statistic_path(:game_id=>@game.id), :remote => true %>
			</tr>
		</table>
	<% else %>
		<p>Noch keine Daten ausgewählt.</p>
	<% end %>
</div>

<div id="main_window" >
  	<%= render :file => "home/statistic_home", :handlers => [:erb], :formats => [:html] %>
</div>