<div id="info_headline" >

  <%= @user.name %>

</div>

<div id="info_main" >

  <p id="info_text"> <%= I18n.t('basic.text_user_games') %> </p>

  <% @games.each do |game| %>

    <%= link_to line_items_create_game_line_items_path(:game_id=>game.id), :remote => true, :class => "sidebar" do %>
      <div id= "<%= cycle('first_row', 'second_row') -%>" >

        <%= game.convert_game_date(game.game_date) %>: <%= game.club_home_name %> - <%= game.club_away_name %>

      </div>
    <% end %>

  <% end %>

  <p id="info_link"> <%= link_to I18n.t('basic.request_friendship'),
                      :controller => :friendships,
                      :action => :req,
                      :id => @user.id %> </p>

</div>
