<%= form_tag line_items_create_line_items_path, method: :get, :remote => true, id: 'top-search-form' do %>
    <%= text_field_tag :query, params[:query], options = {style:"float: left;
    															                               height:22px;
    															                               width: 257px;
    															                               margin-top: 19px;
                                                                 margin-bottom: 4px;
    															                               padding: 6px;
    															                               border-radius: 0px;
    															                               -webkit-appearance: none;
    															                               color: #355264;
    															                               font-size:12pt;", 
    													placeholder: I18n.t('basic.search')} %>
    <%= image_submit_tag('arrow_right.png', options = {style:"width: 24px;
                                                              height: 24px;
                                                              padding: 6px;
                                                              background-color: white;
                                                              border-radius: 0;
                                                              border: 0px;
                                                              -webkit-appearance: none;
                                                              margin-top: 19px;"}) %>
    <%= I18n.t('basic.search_for') %>
    <%= select_tag(:choice_id, options_for_select([[I18n.t('basic.game'), 1], [I18n.t('basic.team'), 2], [I18n.t('basic.club'), 4]], 1), {:class => 'select-style'}) %>
<% end %>