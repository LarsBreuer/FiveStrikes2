<h1>Listing players</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Player Forename</th>
    <th>Player Surename</th>
    <th>Team</th>
    <th>Player Number</th>
    <th>Player Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.id %></td>
    <td><%= player.player_forename %></td>
    <td><%= player.player_surename %></td>
    <td><%= player.team_id %></td>
    <td><%= player.player_number %></td>
    <td><%= player.player_position_first %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

